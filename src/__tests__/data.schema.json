{
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "name": {
                "type": "string"
            },
            "desc": {
                "type": "string"
            },
            "items": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "img": {
                            "anyOf": [
                                {
                                    "type": [
                                        "string",
                                        "null"
                                    ]
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "url": {
                                            "type": "string"
                                        },
                                        "position": {
                                            "type": "string"
                                        }
                                    }
                                }
                            ]
                        },
                        "title": {
                            "type": "string"
                        },
                        "desc": {
                            "type": "string",
                            "pattern": "^.*[!?.]$"
                        },
                        "urls": {
                            "type": "object",
                            "patternProperties": {
                                "^.+$": {
                                    "type": "string"
                                }
                            }
                        },
                        "details": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "title",
                        "desc"
                    ]
                }
            }
        },
        "additionalProperties": false,
        "required": [
            "name",
            "desc",
            "items"
        ]
    }
}